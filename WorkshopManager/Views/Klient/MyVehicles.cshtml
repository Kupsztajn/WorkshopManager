@model List<WorkshopManager.Models.Vehicle>

<div class="container mt-4">
    <h2 class="mb-4">Moje pojazdy</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning" role="alert">
            Nie masz jeszcze dodanych pojazdów.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead class="table-dark">
                <tr>
                    <th>Marka</th>
                    <th>Model</th>
                    <th>VIN</th>
                    <th>Rejestracja</th>
                    <th>Rok</th>
                    <th>Akcje</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var vehicle in Model)
                {
                    <tr>
                        <td>@vehicle.Brand</td>
                        <td>@vehicle.Model</td>
                        <td><code>@vehicle.VIN</code></td>
                        <td>@vehicle.Registration</td>
                        <td>@vehicle.Year</td>
                        <td>
                            <div class="d-flex flex-wrap gap-2">
                                <a asp-controller="Vehicle" asp-action="Details" asp-route-id="@vehicle.Id" class="btn btn-sm btn-info" title="Szczegóły pojazdu">
                                    <i class="bi bi-info-circle me-1"></i> Szczegóły
                                </a>
                                <a asp-controller="Klient" asp-action="OrdersForVehicle" asp-route-vehicleId="@vehicle.Id" class="btn btn-sm btn-primary" title="Zlecenia dla pojazdu">
                                    <i class="bi bi-list-check me-1"></i> Zlecenia
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
</div>
