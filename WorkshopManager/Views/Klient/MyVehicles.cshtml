@model List<WorkshopManager.Models.Vehicle>

<h2>Moje pojazdy</h2>

<table class="table">
    <thead>
    <tr>
        <th>Marka</th>
        <th>Model</th>
        <th>VIN</th>
        <th>Rejestracja</th>
        <th>Rok</th>
        <th>Akcje</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var vehicle in Model)
    {
        <tr>
            <td>@vehicle.Brand</td>
            <td>@vehicle.Model</td>
            <td>@vehicle.VIN</td>
            <td>@vehicle.Registration</td>
            <td>@vehicle.Year</td>
            <td>
                <a asp-controller="Vehicle" asp-action="Details" asp-route-id="@vehicle.Id" class="btn btn-sm btn-info">
                    Szczegóły
                </a>
                <a asp-controller="Klient"
                   asp-action="OrdersForVehicle"
                   asp-route-vehicleId="@vehicle.Id"
                   class="btn btn-sm btn-primary">
                    Zlecenia
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>