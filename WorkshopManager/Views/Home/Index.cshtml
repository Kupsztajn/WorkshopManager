@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5 text-center">
    <!-- Logo -->
    <div class="mb-4">
        <img src="~/images/logo.png" alt="Workshop Manager Logo" class="img-fluid" style="max-height: 120px;" />
    </div>

    <h1 class="display-4 mb-3">Witamy w Workshop Manager!</h1>
    <p class="lead mb-4">Tu możesz zarządzać swoim warsztatem samochodowym.</p>

    @if (!SignInManager.IsSignedIn(User))
    {
        <div>
            <a class="btn btn-lg btn-primary me-3 px-4" asp-controller="Account" asp-action="Login">
                Zaloguj się
            </a>
            <a class="btn btn-lg btn-outline-primary px-4" asp-controller="Account" asp-action="Register">
                Zarejestruj się
            </a>
        </div>
    }
</div>
