@model WorkshopManager.Models.ViewModels.VehicleUploadViewModel

<div class="container mt-4">
    <h2 class="mb-4">Dodaj pojazd dla klienta</h2>

    <form asp-action="Add" method="post" enctype="multipart/form-data" novalidate>
        <input type="hidden" asp-for="ClientId" />

        <div class="mb-3">
            <label asp-for="Brand" class="form-label"></label>
            <input asp-for="Brand" class="form-control" placeholder="Wpisz markę pojazdu" />
            <span asp-validation-for="Brand" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Model" class="form-label"></label>
            <input asp-for="Model" class="form-control" placeholder="Wpisz model pojazdu" />
            <span asp-validation-for="Model" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="VIN" class="form-label"></label>
            <input asp-for="VIN" class="form-control" placeholder="Wpisz numer VIN" />
            <span asp-validation-for="VIN" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Registration" class="form-label"></label>
            <input asp-for="Registration" class="form-control" placeholder="Wpisz numer rejestracyjny" />
            <span asp-validation-for="Registration" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Year" class="form-label"></label>
            <input asp-for="Year" type="number" class="form-control" placeholder="Wpisz rok produkcji" min="1900" max="2100" />
            <span asp-validation-for="Year" class="text-danger small"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Photo" class="form-label"></label>
            <input asp-for="Photo" type="file" accept=".png,.jpg,.jpeg" class="form-control" />
            <span asp-validation-for="Photo" class="text-danger small"></span>
            <div class="form-text">Dozwolone formaty: PNG, JPG, JPEG</div>
        </div>

        <button type="submit" class="btn btn-primary px-4">Dodaj pojazd</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
