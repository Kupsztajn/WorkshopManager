@model WorkshopManager.Models.ViewModels.VehicleUploadViewModel
<h2>Dodaj pojazd dla klienta</h2>

<form asp-action="Add" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="ClientId" />

    <div class="mb-3">
        <label asp-for="Brand"></label>
        <input asp-for="Brand" class="form-control" />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="VIN"></label>
        <input asp-for="VIN" class="form-control" />
        <span asp-validation-for="VIN" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Registration"></label>
        <input asp-for="Registration" class="form-control" />
        <span asp-validation-for="Registration" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Year"></label>
        <input asp-for="Year" type="number" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Photo"></label>
        <input asp-for="Photo" type="file" accept=".png,.jpg,.jpeg" class="form-control" />
        <span asp-validation-for="Photo" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Dodaj pojazd</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
