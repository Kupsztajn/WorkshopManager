@model WorkshopManager.Models.ViewModels.EditUserRolesViewModel

<h2>Edytuj role użytkownika: @Model.Email</h2>

<form method="post" asp-action="EditUserRoles">
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        @for (int i = 0; i < Model.Roles.Count; i++)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="Roles[i].Selected" />
                <label class="form-check-label">@Model.Roles[i].RoleName</label>
                <input type="hidden" asp-for="Roles[i].RoleName" />
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary mt-2">Zapisz</button>
</form>