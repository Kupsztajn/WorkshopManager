@model WorkshopManager.Models.ViewModels.EditUserRolesViewModel

<div class="container mt-4">
    <h2 class="mb-4">Edytuj role użytkownika: <span class="text-primary">@Model.Email</span></h2>

    <form method="post" asp-action="EditUserRoles" novalidate>
        <input type="hidden" asp-for="UserId" />

        @if (ViewBag.Errors != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @ViewBag.Errors
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (Model.AllRoles != null && Model.AllRoles.Any())
        {
            <div class="mb-3">
                @foreach (var role in Model.AllRoles)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="SelectedRole" id="role_@role" value="@role" @(role == Model.SelectedRole ? "checked" : "") />
                        <label class="form-check-label" for="role_@role">@role</label>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-muted fst-italic">Brak dostępnych ról.</p>
        }

        <button type="submit" class="btn btn-primary mt-3">Zapisz</button>
    </form>
</div>