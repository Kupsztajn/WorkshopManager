@model WorkshopManager.Models.ViewModels.ServiceOrderCreateViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

<h2>Dodaj nowe zlecenie dla pojazdu</h2>

<p><strong>Pojazd:</strong> @ViewBag.VehicleDisplay</p>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="VehicleId" />

    <div class="mb-3">
        <label for="MechanicId">Mechanik</label>
        <select asp-for="MechanicId" class="form-select" asp-items="ViewBag.Mechanics"></select>
        <span asp-validation-for="MechanicId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Dodaj zlecenie</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
