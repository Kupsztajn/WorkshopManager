@model WorkshopManager.Models.ViewModels.ServiceOrderCreateViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

<div class="container mt-4">
    <h2 class="mb-4">Dodaj nowe zlecenie dla pojazdu</h2>

    <p><strong>Pojazd:</strong> <span class="text-primary">@ViewBag.VehicleDisplay</span></p>

    <form asp-action="Create" method="post" novalidate>
        <input type="hidden" asp-for="VehicleId" />

        <div class="mb-4">
            <label for="MechanicId" class="form-label">Mechanik</label>
            <select asp-for="MechanicId" class="form-select" asp-items="ViewBag.Mechanics" aria-describedby="mechanicHelp"></select>
            <div id="mechanicHelp" class="form-text">Wybierz mechanika odpowiedzialnego za zlecenie</div>
            <span asp-validation-for="MechanicId" class="text-danger small"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Opisz problem lub usługę"></textarea>
            <span asp-validation-for="Description" class="text-danger small"></span>
        </div>

        <button type="submit" class="btn btn-primary px-4">Dodaj zlecenie</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
